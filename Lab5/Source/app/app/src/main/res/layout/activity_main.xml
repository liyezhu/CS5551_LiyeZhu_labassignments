<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lzd27.example.com.lab5.MainActivity">

    <ImageView
        android:id="@+id/view_photo"
        android:layout_width="260dp"
        android:layout_height="374dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callCamera"
        android:text="Take photo"
        android:layout_below="@+id/view_photo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btn_search"

        android:onClick=""
        android:layout_below="@+id/btn_take_photo"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btn_take_photo"
        android:layout_alignEnd="@+id/btn_take_photo"
        android:layout_alignLeft="@+id/btn_take_photo"
        android:layout_alignStart="@+id/btn_take_photo" />

</RelativeLayout>

